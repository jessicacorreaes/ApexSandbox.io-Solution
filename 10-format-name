public String formatName(String firstName, String lastName) {
    if(String.IsBlank(firstName) == false && String.IsBlank(lastName) == false){
        return lastName + ', ' + firstName;
    }else if(String.IsBlank(firstName) == false && String.IsBlank(lastName)) {
        return firstName;
    }else if(String.IsBlank(firstName) && String.IsBlank(lastName) == false){
        return lastName;
    }
    return '';
    
}