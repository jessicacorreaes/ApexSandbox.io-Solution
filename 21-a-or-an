public String aOrAn(String word) {
    String artigo = word;
    if(artigo.startsWith('a') ||
    artigo.startsWith('e') ||
    artigo.startsWith('i') ||
    artigo.startsWith('o') ||
    artigo.startsWith('u') ||
    ){
        return 'an' + '' + artigo;
    }
        return 'a' + '' + artigo;
    
}