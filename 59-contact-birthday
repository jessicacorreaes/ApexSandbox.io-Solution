public Boolean isBirthday(Contact c) {

    String dayContato = c.Birthdate.day();
    String mesContato = c.Birthdate.month();

    String dayHoje = System.today().day();
    String mesHoje = System.today().month();

    if(dayContato == dayHoje && mesContato == mesHoje){
        return true;
    }
    return false;


}