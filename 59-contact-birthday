public Boolean isBirthday(Contact c) {

    Integer dayContato = c.Birthdate.day();
    Integer mesContato = c.Birthdate.month();

    Integer dayHoje = System.today().day();
    Integer mesHoje = System.today().month();

    if(dayContato == dayHoje && mesContato == mesHoje){
        return true;
    }
    return false;

    //if(c.Birthdate.day() == System.today().day() && c.Birthdate.month() == System.today().month()){
    //return true;
    //}
    //return false;

}