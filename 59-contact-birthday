public Boolean isBirthday(Contact c) {

    Date dayContato = c.Birthdate.day();
    Date mesContato = c.Birthdate.month();

    Date dayHoje = System.today().day();
    Date mesHoje = System.today().month();

    if(dayContato == dayHoje && mesContato == mesHoje){
        return true;
    }
    return false;


}